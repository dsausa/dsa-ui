{
  "name": "dsa-ui",
  "description": "DSA Design System",
  "version": "0.0.6",
  "scripts": {
    "test": "yarn workspace @dsa-ui/wc test",
    "start": "yarn workspace @dsa-ui/wc start",
    "build": "yarn workspaces run build",
    "bump": "yarn version --no-commit-hooks --no-git-tag-version",
    "deploy": "storybook-to-ghpages --packages wc",
    "build:prod": "yarn workspace @dsa-ui/wc build:prod && yarn workspace @dsa-ui/react build",
    "preversion": "git diff --exit-code && yarn test",
    "version": "yarn workspaces run bump-to $npm_package_version",
    "postversion": "yarn v:branch && yarn v:commit && yarn v:tag",
    "v:branch": "git switch -c $npm_package_version && git push -u origin $npm_package_version",
    "v:commit": "git add . && git commit -m 'Version $npm_package_version'",
    "v:tag": "git tag -a v$npm_package_version -m 'Version $npm_package_version' && git push --follow-tags",
    "pr": "gh pr create --title 'Version $npm_package_version' --body 'Version $npm_package_version' --base main --head $npm_package_version"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dsausa/dsa-ui.git"
  },
  "author": "DSA NTC",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dsausa/dsa-ui/issues"
  },
  "homepage": "https://github.com/dsausa/dsa-ui#readme",
  "devDependencies": {
    "@storybook/storybook-deployer": "^2.8.16",
    "@types/node": "^18.11.9",
    "concurrently": "^7.5.0"
  },
  "private": true,
  "workspaces": [
    "wc",
    "react"
  ]
}
